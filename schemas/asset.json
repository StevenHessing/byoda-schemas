{
    "$id": "https://dir.byoda.net/schemas/asset-v0.1",
    "$schema": "https://json-schema.org/draft-07/schema#",
    "description": "metadata of an asset",
    "properties": {
        "created": {
            "description": "data of creation of this asset",
            "type": "string",
            "format": "date-time"
        },
        "mentions": {
            "type": "array",
            "items": {
                "$ref": "/schemas/mention"
            }
        },
        "video_assets": {
            "type": "array",
            "items": {
                "$ref": "/schemas/video_asset"
            }
        },
        "audio_assets": {
            "type": "array",
            "items": {
                "$ref": "/schemas/audio_asset"
            }
        },
        "images": {
            "type": "array",
            "items": {
                "$ref": "/image"
            }
        }
    },
    "$defs": {
        "video_asset": {
            "description": "Video with one or more video layers, audio tracks and subtitles",
            "properties": {
                "locale": {
                    "description": "the locale for the video asset. Can be set, for example, if the video has embedded text",
                    "type": "string"
                },
                "container": {
                    "description": "Container such as mpeg2-ts, mp4, HLS",
                    "type": "string"
                },
                "asset_url": {
                    "description": "URL to start playback of the video asset",
                    "type": "string"
                },
                "video_layers": {
                    "description": "list of video layers, may be of length 1 if the asset is not multi-bitrate",
                    "type": "array",
                    "items": {
                        "$ref": "schemas/video_layer"
                    }
                },
                "audio_tracks": {
                    "description": "list of audio tracks for the video",
                    "type": "array",
                    "items": {
                        "$ref": "schemas/audio_track"
                    }
                },
                "subtitles": {
                    "description": "list of subtitles for the asset",
                    "type": "array",
                    "items": {
                        "$ref": "schemas/subtitle"
                    }
                }
            }
        },
        "video_layer": {
            "description": "a single video layer of a video asset",
            "properties": {
                "horizontal_resolution": {
                    "type": "number"
                },
                "vertical_resolution": {
                    "type": "number"
                },
                "bitrate": {
                    "type": "number"
                },
                "framerate": {
                    "type": "float"
                },
                "codec": {
                    "description": "Codec such as mpeg2, AVC, HEVC, VP1, etc.",
                    "type": "string"
                }
            }
        },
        "audio_track": {
            "description": "describes an audio track of an video asset or audio asset",
            "properties": {
                "locale": {
                    "type": "string"
                },
                "codec": {
                    "description": "codec for the audio track, ie. mp3, flac, etc.",
                    "type": "string"
                },
                "sample_rate": {
                    "description": "sample rate in Hz",
                    "type": "number"
                },
                "sample_depth": {
                    "description": "number of bits",
                    "type": "number"
                }
            }
        },
        "subtitle": {
            "description": "describes a subtitle available for a video asset",
            "properties": {
                "locale": {
                    "type": "string"
                }
            }
        },
        "audio_asset": {
            "properties": {
                "locale": {
                    "description": "Locale for the audio asset",
                    "type": "string"
                },
                "metadata": {
                    "type": "array",
                    "items": {
                        "type": "metadata"
                    }
                },
                "audio_url": {
                    "type": "string"
                },
                "container": {
                    "type": "string"
                },
                "audio_tracks": {
                    "type": "array",
                    "items": {
                        "$ref": "audio_track"
                    }
                }
            }
        },
        "image": {
            "properties": {
                "image_url": {
                    "type": "string"
                },
                "metadata": {
                    "type": "array",
                    "items": {
                        "$ref": "metadata"
                    }
                },
                "horizontal_resolution": {
                    "type": "number"
                },
                "vertical_resolution": {
                    "type": "number"
                },
                "format": {
                    "description": "png, gif, SVG, etc.",
                    "type": "string"
                }
            }
        },
        "metadata": {
            "description": "Metadata for a video asset",
            "properties": {
                "locale": {
                    "description": "locale for the metadata, ie. en_US",
                    "type": "string"
                },
                "creator": {
                    "description": "creator of the asset",
                    "type": "string"
                },
                "copyright_owner": {
                    "type": "string"
                },
                "copyright_years": {
                    "type": "string"
                },
                "age_restrictions": {
                    "description": "List of age restrictions for various rating systems",
                    "type": "array",
                    "items": {
                        "$ref": "/schema/age_restriction"
                    }
                },
                "content_warnings": {
                    "description": "list of terms with potention triggers, such as violence, or cursing",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "publisher": {
                    "description": "the publisher of the asset",
                    "type": "string"
                },
                "title": {
                    "description": "title of the asset",
                    "type": "string"
                },
                "subject": {
                    "description": "a brief description of the asset",
                    "type": "string"
                },
                "text": {
                    "description": "text for the asset",
                    "type": "string"
                },
                "keywords": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "mentions": {
            "description": "Assets, members or URLs mentioned by this asset",
            "properties": {
                "mention_type": {
                    "type": "string"
                },
                "mention_reference": {
                    "type": "string"
                }
            }
        }
    }
}